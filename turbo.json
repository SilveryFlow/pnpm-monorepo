{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "//#lint:root": {
      "inputs": ["!apps", "!packages", "packages/eslint-config/base.js", "*.{js,ts,mjs,cjs,vue}"]
    },
    "format": {
      "inputs": ["**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}", "../../packages/prettier-config/index.js"],
      "outputs": []
    },
    "//#format:root": {
      "inputs": [
        "!apps",
        "!packages",
        "packages/prettier-config/index.js",
        "*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}",
        "doc/**/*.md"
      ],
      "outputs": []
    },
    "spell": {
      "inputs": ["**/*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}", "../../cspell.config.js"],
      "outputs": []
    },
    "//#spell:root": {
      "inputs": [
        "!apps",
        "!packages",
        "cspell.config.js",
        "*.{js,ts,mjs,cjs,json,css,less,scss,vue,html,md}",
        "doc/**/*.md"
      ],
      "outputs": []
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "type-check": {
      "dependsOn": ["transit"]
    },
    "test": {
      "dependsOn": ["transit", "@repo/test-config#build"],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    }
  }
}
